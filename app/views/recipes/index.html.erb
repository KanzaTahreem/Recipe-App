<div class="recipes-container">
<h1>Recipes</h1>
  <% @recipes.each do |recipe| %>
    <div class="recipes-title">
      <h2 class="recipe_name"><%= recipe.name %></h2>
    </div>
    <div class="recipes-features">
    <p class="recipe_desc"><%= truncate(recipe.description, length: 40, omission: "...") %></p> 
    
    <div class="list_btn">
      <button type="button" class="remove_btn btn"><%= link_to "Delete", recipe_path(id: recipe.id), data: { turbo_method: :delete } %></button>
      <button type="button" class="details btn"><%= link_to "Details", recipe_path(id: recipe.id) %></button>
    </div>
    </div>
  <% end %>
  <div class="list_btn">
    <button class="recipe_btn"><%= link_to "Add Recipe", new_recipe_path %></button>
  </div>
</div>
